    {
        "id": "textkompetenz",
        "name": "Textkompetenz (schriftlich)",
        "category": "Literal",
        "stages": [
            {
                "level": 1,
                "label": "Assoziativ",
                "description": "Lose Verkettung, thematische Brüche",
                "examples": [
                    "Schule ist schön. Ich habe einen Hund. Mama kocht."
                ]
            },
            {
                "level": 2,
                "label": "Verkettet",
                "description": "Logisch verknüpft mit „und dann\"",
                "examples": [
                    "Ich gehe in die Schule und dann lerne ich und dann esse ich Jause."
                ]
            },
