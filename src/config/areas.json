    {
        "id": "verbformen-person-numerus",
        "name": "Verbformen: Person und Numerus",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Undifferenzierte Zuordnung",
                "description": "Infinitiv/Stammform für alle Personen",
                "examples": [
                    "Ich lesen.",
                    "Er spielen.",
                    "Wir gehen."
                ]
            },
            {
                "level": 2,
                "label": "1. Person Singular korrekt",
                "description": "1. Person Singular wird korrekt konjugiert",
                "examples": [
                    "Ich lese.",
                    "Ich spiele.",
                    "Ich gehe."
                ]
            },
            {
                "level": 3,
                "label": "3. Person Singular korrekt",
                "description": "3. Person Singular wird korrekt konjugiert",
                "examples": [
                    "Er liest.",
                    "Sie spielt.",
                    "Es geht."
                ]
            },
            {
                "level": 4,
                "label": "2. Pers. Sg. / 3. Pers. Pl. / 1. Pers. Pl.",
                "description": "Mindestens eine dieser Formen wird korrekt gebildet",
                "examples": [
                    "Du liest.",
                    "Sie lesen.",
                    "Wir lesen."
                ]
            },
            {
                "level": 5,
                "label": "2. Person Plural korrekt",
                "description": "2. Person Plural wird korrekt konjugiert",
                "examples": [
                    "Ihr lest.",
                    "Ihr spielt.",
                    "Ihr geht."
                ]
            }
        ]
    },
    {
        "id": "verbformen-tempus",
        "name": "Verbformen: Tempus",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Präsens",
                "description": "Verwendung der Gegenwartsform",
                "examples": [
                    "Ich spiele.",
                    "Er geht."
                ]
            },
            {
                "level": 2,
                "label": "Partizip ohne Hilfsverb",
                "description": "Partizip II wird ohne Hilfsverb verwendet",
                "examples": [
                    "Agam gegangen.",
                    "Soren gespielt."
                ]
            },
            {
                "level": 3,
                "label": "Perfekt mit Hilfsverb",
                "description": "Perfekt wird mit Hilfsverb (haben/sein) gebildet",
                "examples": [
                    "Agam ist gegangen.",
                    "Ich habe gespielt."
                ]
            },
            {
                "level": 4,
                "label": "Präteritum von „sein\"",
                "description": "Präteritum von „sein\" wird verwendet",
                "examples": [
                    "Soren war fröhlich.",
                    "Ich war in der Schule."
                ]
            },
            {
                "level": 5,
                "label": "Futur mit „werden\"",
                "description": "Futur I mit „werden\" + Infinitiv wird gebildet",
                "examples": [
                    "Soren wird weggehen.",
                    "Ich werde spielen."
                ]
            },
            {
                "level": 6,
                "label": "Präteritum",
                "description": "Präteritum anderer Verben wird verwendet",
                "examples": [
                    "Soren ging.",
                    "Sie spielte.",
                    "Er las ein Buch."
                ]
            }
        ]
    },
    {
        "id": "verbformen-genus-verbi",
        "name": "Verbformen: Genus Verbi",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Aktive Verbformen",
                "description": "Verben werden im Aktiv verwendet",
                "examples": [
                    "Mia schließt die Tür.",
                    "Der Lehrer erklärt die Aufgabe."
                ]
            },
            {
                "level": 2,
                "label": "Zustandspassiv",
                "description": "sein + Partizip II",
                "examples": [
                    "Die Tür ist geschlossen.",
                    "Das Fenster ist geöffnet."
                ]
            },
            {
                "level": 3,
                "label": "Vorgangspassiv",
                "description": "werden + Partizip II",
                "examples": [
                    "Die Tür wird geschlossen.",
                    "Das Essen wird gekocht."
                ]
            }
        ]
    },
    {
        "id": "verbstellung",
        "name": "Verbstellung in Aussagesätzen",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Bruchstücke",
                "description": "Äußerungen ohne finites Verb",
                "examples": [
                    "Schule gut.",
                    "Mama da."
                ]
            },
            {
                "level": 2,
                "label": "V2-Stellung",
                "description": "Verb an zweiter Stelle",
                "examples": [
                    "Konrad geht.",
                    "Ich spiele."
                ]
            },
            {
                "level": 3,
                "label": "Verbklammer I",
                "description": "Modalverb + Infinitiv, trennbare Verben, Perfekt",
                "examples": [
                    "Nilay will spielen.",
                    "Ich schaue an.",
                    "Wir sind gegangen."
                ]
            },
            {
                "level": 4,
                "label": "Verbendstellung im Nebensatz",
                "description": "Verb steht im Nebensatz an letzter Stelle",
                "examples": [
                    "Tim hofft, dass sie ihn begleitet."
                ]
            },
            {
                "level": 5,
                "label": "Verbklammer II",
                "description": "Konjunktiv, Passiv, Futur",
                "examples": [
                    "Ich würde spielen.",
                    "Der Tisch wird gedeckt."
                ]
            },
            {
                "level": 6,
                "label": "Erweitertes Partizipialattribut",
                "description": "Komplexe Partizipialkonstruktionen vor dem Nomen",
                "examples": [
                    "der von Konrad geschriebene Aufsatz"
                ]
            }
        ]
    },
    {
        "id": "nomen",
        "name": "Nomen: Subjekte und Objekte",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Kein Artikelgebrauch",
                "description": "Nomen werden ohne Artikel verwendet",
                "examples": [
                    "Stift kaputt.",
                    "Katze da."
                ]
            },
            {
                "level": 2,
                "label": "Undifferenziert der/die",
                "description": "Artikel werden verwendet, aber ohne korrekte Genus-/Kasuszuordnung",
                "examples": [
                    "Der Katze will die Vogel fangen."
                ]
            },
            {
                "level": 3,
                "label": "Subjekte korrekt",
                "description": "Nominativ (Subjekt) mit korrektem Artikel",
                "examples": [
                    "Die Katze will die Vogel fangen."
                ]
            },
            {
                "level": 4,
                "label": "Akkusativobjekt korrekt",
                "description": "Akkusativobjekte mit korrektem Artikel",
                "examples": [
                    "Die Katze will den Vogel fangen."
                ]
            },
            {
                "level": 5,
                "label": "Dativobjekt korrekt",
                "description": "Dativobjekte mit korrektem Artikel",
                "examples": [
                    "Nicole hilft der Freundin.",
                    "Ich gebe dem Lehrer das Heft."
                ]
            },
            {
                "level": 6,
                "label": "Genitivobjekt korrekt",
                "description": "Genitivobjekte korrekt gebildet",
                "examples": [
                    "Livia beschuldigte Milan des Diebstahls."
                ]
            }
        ]
    },
    {
        "id": "aussageverbindungen",
        "name": "Aussageverbindungen",
        "category": "Morphologisch-Syntaktisch",
        "stages": [
            {
                "level": 1,
                "label": "Keine Verbindungen",
                "description": "Sätze werden aneinandergereiht ohne Verbindungswörter",
                "examples": [
                    "Ich gehe. Er spielt. Mama kommt."
                ]
            },
            {
                "level": 2,
                "label": "„und\"",
                "description": "Sätze werden mit „und\" verbunden",
                "examples": [
                    "Ich gehe und er spielt."
                ]
            },
            {
                "level": 3,
                "label": "„(und) dann\"",
                "description": "Temporale Verknüpfung mit „dann\"",
                "examples": [
                    "Ich esse und dann gehe ich spielen."
                ]
            },
            {
                "level": 4,
                "label": "Koordinierende Konjunktionen + weil mit V2",
                "description": "Weitere koordinierende Konjunktionen; „weil\" noch mit Verb an 2. Stelle",
                "examples": [
                    "Ich bin müde, aber ich spiele.",
                    "Ich bin müde, weil ich bin gelaufen."
                ]
            },
            {
                "level": 5,
                "label": "Einfache Subjunktionen mit Verbendstellung",
                "description": "„dass\", „weil\", „wenn\" mit korrekter Verbendstellung",
                "examples": [
                    "Ich bin müde, weil ich gelaufen bin.",
                    "Ich weiß, dass er kommt."
                ]
            },
            {
                "level": 6,
                "label": "Weitere Subjunktionen",
                "description": "als, bevor, bis, damit, falls, nachdem, ob, obwohl, während…",
                "examples": [
                    "Bevor ich esse, wasche ich meine Hände.",
                    "Obwohl es regnet, gehen wir raus."
                ]
            }
        ]
    },
