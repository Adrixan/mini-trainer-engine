            },
            {
                "level": 5,
                "label": "Bridging",
                "description": "Can understand complex texts and abstract concepts",
                "examples": [
                    "Analyzes author's purpose",
                    "Understands figurative language",
                    "Synthesizes information from multiple sources"
                ]
            },
            {
                "level": 6,
                "label": "Fluent",
                "description": "Can understand nuanced language and complex academic content",
                "examples": [
                    "Interprets subtle meanings and tone",
                    "Critically evaluates arguments",
                    "Understands domain-specific terminology"
                ]
            }
        ]
    },
